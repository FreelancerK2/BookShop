<Window x:Class="BookStore.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="Edit Book" Height="550" Width="350" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <!-- Book Name -->
            <TextBlock Text="Book Name" Foreground="Gray" Margin="5"/>
            <TextBox Name="NameBox" Margin="5,0"/>

            <!-- Author -->
            <TextBlock Text="Author" Foreground="Gray" Margin="5"/>
            <TextBox Name="AuthorBox" Margin="5,0"/>

            <!-- Publishing House -->
            <TextBlock Text="Publishing House" Foreground="Gray" Margin="5"/>
            <TextBox Name="PublishingHouseBox" Margin="5,0"/>

            <!-- Number of Pages -->
            <TextBlock Text="Number of Pages" Foreground="Gray" Margin="5"/>
            <TextBox Name="NumberOfPagesBox" Margin="5,0"/>

            <!-- Genre -->
            <TextBlock Text="Genre" Foreground="Gray" Margin="5"/>
            <TextBox Name="GenreBox" Margin="5,0"/>

            <!-- Date of Publishing -->
            <TextBlock Text="Date of Publishing" Foreground="Gray" Margin="5"/>
            <DatePicker Name="DateOfPublishingPicker" Margin="5,0"/>

            <!-- Prime Cost -->
            <TextBlock Text="Prime Cost" Foreground="Gray" Margin="5"/>
            <TextBox Name="PrimeCostBox" Margin="5,0"/>

            <!-- Sale Price -->
            <TextBlock Text="Sale Price" Foreground="Gray" Margin="5"/>
            <TextBox Name="SalePriceBox" Margin="5,0"/>

            <!-- Is Sequel -->
            <CheckBox Name="IsSequelBox" Content="Is Sequel?" Margin="5"/>

            <!-- Is On Sale -->
            <CheckBox Name="IsOnSaleBox" Content="Is On Sale?" Margin="5"/>

            <!-- Discount -->
            <TextBlock Text="Discount (%)" Foreground="Gray" Margin="5"/>
            <TextBox Name="DiscountBox" Margin="5,0"/>

            <!-- Save Changes Button -->
            <Button Content="Save Changes" Click="SaveChanges_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
